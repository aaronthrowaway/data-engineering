<%- model_class = Upload -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:filename) %></th>
      <th><%= model_class.human_attribute_name(:revenue) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  
  <tbody>
    <% @uploads.each do |upload| %>
      <tr>
        <td><%= link_to upload.id, upload_path(upload) %></td>
        <td><%= upload.filename %></td>
        <td><%= upload.revenue %></td>
        <td><%= upload.created_at.strftime("%B %d, %Y")%></td>
        <td>
        <%= link_to t('.edit', :default => t("helpers.links.edit")),
                    edit_upload_path(upload), :class => 'btn btn-mini' %>

        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    upload_path(upload),
                    :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                    :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_upload_path,
            :class => 'btn btn-primary' %>
